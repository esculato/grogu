{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "renovate"
  ],
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "at any time"
  ],
  "rebaseWhen": "behind-base-branch",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "enabledManagers": [
    "github-actions",
    "docker-compose"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "groupName": "Docker minor/patch updates",
      "matchManagers": [
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Automerge non-major Docker updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "minimumReleaseAge": "3 days",
      "internalChecksFilter": "strict",
      "ignoreTests": true,
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Create PRs for major Docker updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Automerge non-major GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "3 days",
      "internalChecksFilter": "strict",
      "ignoreTests": true,
      "automerge": true,
      "automergeType": "branch",
      "pinDigests": true
    },
    {
      "description": "Create PRs for major GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
